<style>
    /* General Dark Background */
body {
    background-color: #121212;
    color: #e0e0e0;
    font-family: Arial, sans-serif;
}

.container {
    margin-top: 50px;
}

/* Neon Effect for Title */
.neon-title {
    color: #ffff33; /* Neon yellow */
    text-shadow: 0 0 5px #ffff33, 0 0 10px #ffff33, 0 0 20px #ffff33, 0 0 40px #ffff33;
}

/* Card Style */
.dark-card {
    background-color: #1f1f1f;
    border: none;
    border-radius: 10px;
}

/* Neon Shadow for Card */
.shadow-neon {
    box-shadow: 0 0 10px #ffff33, 0 0 20px #ffff33, 0 0 30px #ffff33;
}

/* Neon Text */
.text-neon {
    color: #ffff33; /* Neon yellow */
    text-shadow: 0 0 5px #ffff33, 0 0 10px #ffff33;
}

/* Button Styles */
.btn-neon {
    background-color: #ffff33; /* Neon yellow */
    border: none;
    color: #121212;
    padding: 10px 20px;
    border-radius: 5px;
    box-shadow: 0 0 5px #ffff33, 0 0 10px #ffff33;
    text-transform: uppercase;
    font-weight: bold;
    transition: all 0.3s ease;
}

.btn-neon:hover {
    background-color: #ffea00;
    box-shadow: 0 0 15px #ffff33, 0 0 30px #ffff33;
}

/* Outline Buttons */
.btn-outline-neon {
    border: 2px solid #ffff33;
    color: #ffff33;
    border-radius: 5px;
    text-transform: uppercase;
    transition: all 0.3s ease;
}

.btn-outline-neon:hover {
    background-color: #ffff33;
    color: #121212;
    box-shadow: 0 0 10px #ffff33, 0 0 20px #ffff33;
}

</style>

<div class="container mt-5 text-light">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="neon-title">Halaman Catatan</h1>
        <a href="/dashboard/create-note" class="btn btn-neon">Buat Catatan</a>
    </div>
    <div class="row">
        <% if (notes.length === 0) { %>
            <p class="text-center">Belum ada catatan yang dibuat</p>
        <% } else { %>
            <% notes.forEach(note => { %>
                <div class="col-md-4 mb-3 animate-fade-up">
                    <div class="card dark-card shadow-neon">
                        <div class="card-body">
                            <h5 class="card-title text-neon"><%= note.title %></h5>
                            <p class="card-text text-light">
                                <%= note.description.substring(0, 100) %>...
                            </p>
                            <div class="d-flex justify-content-between">
                                <a href="/dashboard/update-note/<%= note._id %>" class="btn btn-outline-neon">Edit</a>
                                <a href="/dashboard/note-detail/<%= note._id %>" class="btn btn-outline-neon">Detail</a>
                                <form action="/dashboard/delete-note/<%= note._id %>" method="post" onsubmit="return confirmDelete()">
                                    <button class="btn btn-outline-danger" type="submit">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } %>
    </div>
</div>
